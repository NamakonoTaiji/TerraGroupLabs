<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 450">
  <!-- 背景 -->
  <rect width="800" height="450" fill="#E0F7FA"/>
  
  <!-- 空 -->
  <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
    <stop offset="0%" stop-color="#1e90ff" />
    <stop offset="50%" stop-color="#87ceeb" />
    <stop offset="100%" stop-color="#f0f8ff" />
  </linearGradient>
  <rect width="800" height="300" fill="url(#skyGradient)"/>
  
  <!-- 地面 -->
  <rect width="800" height="200" y="250" fill="#7cbe7c"/>
  
  <!-- 山 - 背景 -->
  <polygon points="0,250 100,180 200,230 300,170 400,220 500,150 600,200 700,180 800,240 800,250 0,250" fill="#567d46"/>
  
  <!-- メインビルディング -->
  <rect x="300" y="100" width="200" height="200" fill="#ffffff"/>
  <rect x="310" y="110" width="180" height="180" fill="#7ec0ee" opacity="0.7"/>
  
  <!-- 屋上ヘリポート -->
  <circle cx="400" cy="100" r="30" fill="#222222"/>
  <circle cx="400" cy="100" r="25" fill="#ffffff"/>
  <text x="390" y="105" font-family="Arial" font-size="20" font-weight="bold">H</text>
  
  <!-- ラボ棟 -->
  <ellipse cx="550" cy="200" rx="50" ry="100" fill="#e0e0e0"/>
  <ellipse cx="550" cy="100" rx="40" ry="20" fill="#b3e6ff" opacity="0.8"/>
  
  <!-- 接続ブリッジ -->
  <rect x="500" y="180" width="50" height="20" fill="#d0d0d0"/>
  
  <!-- 発電所 -->
  <rect x="150" y="200" width="100" height="50" fill="#505050"/>
  <rect x="170" y="150" width="15" height="50" fill="#707070"/>
  <rect x="195" y="150" width="15" height="50" fill="#707070"/>
  <rect x="220" y="150" width="15" height="50" fill="#707070"/>
  
  <!-- 木 -->
  <g>
    <rect x="100" y="220" width="10" height="30" fill="#8B4513"/>
    <polygon points="105,180 85,220 125,220" fill="#2E8B57"/>
  </g>
  <g>
    <rect x="650" y="220" width="10" height="30" fill="#8B4513"/>
    <polygon points="655,180 635,220 675,220" fill="#2E8B57"/>
  </g>
  <g>
    <rect x="700" y="230" width="10" height="20" fill="#8B4513"/>
    <polygon points="705,200 690,230 720,230" fill="#2E8B57"/>
  </g>
  
  <!-- フェンス -->
  <line x1="100" y1="250" x2="700" y2="250" stroke="#505050" stroke-width="3"/>
  <line x1="100" y1="250" x2="100" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="150" y1="250" x2="150" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="200" y1="250" x2="200" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="250" y1="250" x2="250" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="600" y1="250" x2="600" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="650" y1="250" x2="650" y2="230" stroke="#505050" stroke-width="3"/>
  <line x1="700" y1="250" x2="700" y2="230" stroke="#505050" stroke-width="3"/>
  
  <!-- 日光の反射 -->
  <ellipse cx="400" cy="120" rx="40" ry="10" fill="#ffffff" opacity="0.3"/>
  
  <!-- オーバーレイテキスト -->
  <rect x="250" y="350" width="300" height="60" rx="10" fill="rgba(0,0,0,0.5)"/>
  <text x="400" y="380" font-family="Arial" font-size="20" font-weight="bold" fill="white" text-anchor="middle">最先端研究施設の3Dモデルを見る</text>
  <circle cx="400" cy="400" r="20" fill="#0056B3"/>
  <polygon points="390,390 390,410 415,400" fill="white"/>
</svg>